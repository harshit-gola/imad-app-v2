    $('input[name=choice1]').change(function(){

     if($(this).val()=="yes")
     {
        $("#txtage1").show();
        $("#txtage2").show();
        $("#txtage3").show();
     }
     else
     {
         $("#txtage1").hide();
         $("#txtage2").hide();
         $("#txtage3").hide();
     }
     });
  });
  </script>

