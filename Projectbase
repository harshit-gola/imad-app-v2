<script type="text/javascript">
 //<![CDATA[ 
 // array of possible projects in the same order as they appear in the platformBased selection list 
 var projectLists = new Array(6) 
 projectLists["empty"] = ["Platforms"]; 
 projectLists["Desktop Application"] = ["MT 4", "MT 5", "Mt 7", "NT 8", "C Trader"]; 
 projectLists["Web Development"] = ["PHP", "Angular", "Jquery", "Javascript"]; 
 projectLists["Mobile Development"] = ["Android", "IOS", "Windows"]; 
 //projectLists["Europe"]= ["", "", "", ""]; 
 /* projectChange() is called from the onchange event of a select element. 
 * param selectObj - the select object which fired the on change event. 
 */ 
 function projectChange(selectObj) { 
 // get the index of the selected option 
 var idx = selectObj.selectedIndex; 
 // get the value of the selected option 
 var which = selectObj.options[idx].value; 
 // use the selected option value to retrieve the list of items from the projectLists array 
 pList = projectLists[which]; 
 // get the platformBased select element via its known id 
 var pSelect = document.getElementById("platformBased"); 
 // remove the current options from the platformBased select 
 var len=pSelect.options.length; 
 while (pSelect.options.length > 0) { 
 pSelect.remove(0); 
 } 
 var newOption; 
 // create new options 
 for (var i=0; i<pList.length; i++) { 
 newOption = document.createElement("option"); 
 newOption.value = pList[i];  // assumes option string and value are the same 
 newOption.text=pList[i]; 
 // add the new option 
 try { 
 pSelect.add(newOption);  // this will fail in DOM browsers but is needed for IE 
 } 
 catch (e) { 
 pSelect.appendChild(newOption); 
 } 
 } 
 } 
//]]>
</script>
 
